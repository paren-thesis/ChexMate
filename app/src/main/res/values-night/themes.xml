<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChexMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/ghibli_primary</item>
        <item name="colorPrimaryVariant">@color/ghibli_primary_dark</item>
        <item name="colorOnPrimary">@color/ghibli_text_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/ghibli_secondary</item>
        <item name="colorSecondaryVariant">@color/ghibli_secondary_dark</item>
        <item name="colorOnSecondary">@color/ghibli_text_primary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/ghibli_background</item>
        <item name="colorSurface">@color/ghibli_surface</item>
        <item name="colorOnSurface">@color/ghibli_text_primary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/ghibli_error</item>
        <item name="colorOnError">@color/ghibli_text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/ghibli_text_primary</item>
        <item name="android:textColorSecondary">@color/ghibli_text_secondary</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Night</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Night</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Night</item>
        <item name="chipStyle">@style/Widget.App.Chip.Night</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/ghibli_background</item>
        <item name="android:navigationBarColor">@color/ghibli_background</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView.Night" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/ghibli_surface</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.App.Button.Night" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/ghibli_text_primary</item>
        <item name="backgroundTint">@color/ghibli_primary</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Text Input Style -->
    <style name="Widget.App.TextInputLayout.Night" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ghibli_primary</item>
        <item name="hintTextColor">@color/ghibli_primary</item>
        <item name="android:textColorHint">@color/ghibli_text_secondary</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip.Night" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/ghibli_secondary_light</item>
        <item name="android:textColor">@color/ghibli_text_primary</item>
    </style>
</resources>